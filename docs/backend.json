{
  "entities": {
    "Exam": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Exam",
      "type": "object",
      "description": "Represents an exam.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Exam entity."
        },
        "title": {
          "type": "string",
          "description": "Name of the exam."
        },
        "duration": {
          "type": "number",
          "description": "Duration of the exam in minutes."
        },
        "questionPaperUrl": {
          "type": "string",
          "description": "URL of the uploaded question paper PDF in Firebase Storage."
        }
      },
      "required": [
        "id",
        "title",
        "duration"
      ]
    },
    "Student": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Student",
      "type": "object",
      "description": "Represents a student taking an exam.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Student entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the student."
        },
        "regNumber": {
          "type": "string",
          "description": "Registration number of the student."
        },
        "imageUrl": {
            "type": "string",
            "description": "URL to the student's profile image."
        },
        "voiceUrl": {
            "type": "string",
            "description": "URL to the student's voice recording."
        },
        "hasImage": {
            "type": "boolean"
        },
        "hasVoice": {
            "type": "boolean"
        }
      },
      "required": [
        "id",
        "name",
        "regNumber"
      ]
    },
    "Response": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Response",
      "type": "object",
      "description": "Represents a student's response to a question in an exam.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Response entity."
        },
        "examId": {
          "type": "string",
          "description": "Reference to Exam."
        },
        "studentId": {
          "type": "string",
          "description": "Reference to Student."
        },
        "answers": {
          "type": "array",
          "description": "The student's answers to the questions.",
          "items": {
            "type": "string"
          }
        },
        "timestamp": {
          "type": "string",
          "description": "Timestamp of when the exam was submitted.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "examId",
        "studentId",
        "answers",
        "timestamp"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "collections": {
      "students": {
        "schema": {
          "$ref": "#/entities/Student"
        },
        "description": "Stores student profiles including registration number, image and voice data for verification."
      },
      "exams": {
        "schema": {
          "$ref": "#/entities/Exam"
        },
        "description": "Stores exam details, including questions."
      },
      "responses": {
        "schema": {
          "$ref": "#/entities/Response"
        },
        "description": "Stores student responses to exam questions."
      }
    }
  }
}
